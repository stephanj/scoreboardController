<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.janssen.scoreboard">

    <!--<uses-sdk android:minSdkVersion="19" android:targetSdkVersion="19" />-->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <activity
                android:name="org.janssen.scoreboard.CourtActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
        </activity>

        <activity
                android:name="org.janssen.scoreboard.LoginActivity"
                android:label="@string/games"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name="org.janssen.scoreboard.CountDownActivity"
                android:label="@string/games"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name="org.janssen.scoreboard.NewGameActivity"
                android:label="@string/games"
                android:theme="@style/AppTheme"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name="org.janssen.scoreboard.ScoreActivity"
                android:label="@string/games"
                android:theme="@style/ImmersiveStickyTheme"
                android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>
