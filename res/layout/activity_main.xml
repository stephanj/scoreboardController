<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:keepScreenOn="true"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#ffffff"
            android:focusable="true"
            android:id="@+id/fullscreen_content_controls"
            style="@style/ImmersiveStickyTheme"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreA1"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/one"
                    android:layout_marginLeft="18dp"
                    style="@android:style/MediaButton.Play"
                    android:layout_below="@+id/switch1"
                    android:layout_alignParentLeft="true" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreA2"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/two"
                    style="@android:style/MediaButton.Play"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/scoreA1" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreA3"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/three"
                    style="@android:style/MediaButton.Play"
                android:layout_alignBottom="@id/clockDown"
                android:layout_alignLeft="@+id/scoreA2" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/foulA"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/foul"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/scoreA1"
                android:layout_toRightOf="@+id/scoreA1"
                android:layout_marginLeft="37dp" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreB2"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/two"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/scoreA2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/foulB"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/foul"
                    style="@android:style/MediaButton.Play"
                android:layout_below="@+id/visitorsTeam"
                android:layout_toRightOf="@id/clockUp" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreB3"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/three"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/scoreA3"
                android:layout_alignLeft="@+id/scoreB2" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scoreB1"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/one"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/quarterBtn"
                android:layout_alignLeft="@+id/scoreB2" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeButton"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/clock"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/visitorsTimeoutButton"
                android:layout_centerHorizontal="true" />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quarterBtn"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/quarter"
                    style="@android:style/MediaButton.Play"
                android:layout_alignTop="@+id/foulB"
                android:layout_centerHorizontal="true" />

            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negatief"
                    android:id="@+id/switch1"
                    android:singleLine="true"
                    android:checked="false"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_alignTop="@+id/newGame"
                android:layout_alignLeft="@id/clockDown" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Home team"
                    android:id="@+id/homeTeam"
                android:textStyle="bold"
                    android:textSize="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/scoreA1"
                android:textColor="@android:color/black" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Visitors team"
                    android:id="@+id/visitorsTeam"
                    android:textStyle="bold"
                    android:textSize="25dp"
                android:layout_marginRight="49dp"
                android:layout_alignTop="@+id/homeTeam"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black" />

            <ImageButton
                    style="@android:style/MediaButton.Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/clockUp"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/plusone"
                android:layout_alignTop="@id/clockDown"
                android:layout_toRightOf="@+id/timeButton" />

            <ImageButton
                    style="@android:style/MediaButton.Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/clockDown"
                    android:contentDescription="button"
                    android:clickable="true"
                    android:src="@drawable/minusone"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/foulA"
                android:layout_marginBottom="19dp" />

            <ImageButton
                style="@android:style/MediaButton.Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeTimeoutButton"
                android:contentDescription="button"
                android:clickable="true"
                android:src="@drawable/timeout"
                android:layout_alignTop="@+id/scoreA2"
                android:layout_alignLeft="@+id/foulA" />

            <ImageButton
                style="@android:style/MediaButton.Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/visitorsTimeoutButton"
                android:contentDescription="button"
                android:clickable="true"
                android:src="@drawable/timeout"
                android:layout_alignTop="@+id/scoreB2"
                android:layout_alignLeft="@+id/foulB" />

            <ImageButton
                style="@android:style/MediaButton.Play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attentionBtn"
                android:contentDescription="button"
                android:clickable="true"
                android:src="@drawable/attention"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/quarterBtn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Game"
                android:id="@+id/newGame"
                android:singleLine="true"
                android:typeface="normal"
                style="@android:style/TextAppearance.Small"
                android:textColor="@android:color/black"
                android:layout_above="@+id/foulB"
                android:layout_alignLeft="@id/clockUp" />

        </RelativeLayout>
    </FrameLayout>
</FrameLayout>